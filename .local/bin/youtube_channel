#!/bin/sh 

VIDEO="$(youtube-dl --print-json --skip-download --max-downloads 5 $1 | jq -r '(.playlist_index|tostring) + ": " + .fulltitle + "\n" + .webpage_url')"

SEL="$(echo "$VIDEO" | awk 'NR % 2 == 1' | dmenu -i -l 20)"
INDEX=$(echo "$SEL" | cut -f1 -d:)

let "INDEX=INDEX*2"

URL="$(echo "$VIDEO" | sed "${INDEX}q;d")"

video_watch $URL
