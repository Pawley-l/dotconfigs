#!/bin/sh

# Script to speed up the process of starting a new project
NAME=$(dialog --title "Project" --inputbox "name" 8 40)
PROJECTS=$(printf "%s\n" "cpp" "java" "go" "bash" "rust"| dmenu -i -l 20)
LOCATION=$HOME"/.projects/"$1

# Break if nothing
if [ $# -le 0 ]; then
    echo "Not enough paramaters!"
    exit 1
fi

# Create a cpp project
if [ $TYPE == "cpp" ]; then
    mkdir -p $LOCATION
    mkdir -p $LOCATION"/src"
    mkdir -p $LOCATION"/include"

    cp $HOME/.snippets/skeleton.main.cmake $LOCATION/CMakeLists.txt
    cp $HOME/.snippets/skeleton.main.c $LOCATION/src/main.cpp
fi

# Create a Python Project

# Create a C Project

# Create a Rust Project

# Create a C# Project

# Create a Java Project

# Create a Go Project

# Create a Script
if [ $TYPE == "script" ]; then
    LOCATION=$HOME/.config/scripts
    touch $LOCATION/$2
    echo '#!/bin/sh' >> $LOCATION/$2
fi

# ...

# Project info
echo $1" >>> "$LOCATION
